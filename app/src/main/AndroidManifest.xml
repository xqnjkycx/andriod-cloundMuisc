<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycloudmusic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCloudMusic"
        android:usesCleartextTraffic="true">
        <activity android:name=".SongDetailActivity"></activity>
        <activity android:name=".SongListDetailActivity"></activity>
        <activity
            android:name=".PhoneLogin"
            android:label="手机号登录" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- android:windowSoftInputMode="adjustNothing" 可以让键盘弹出的时候不挤压界面 -->
        <activity
            android:name=".MainActivity"
            android:label="网易云音乐"
            android:windowSoftInputMode="adjustNothing" />
    </application>

</manifest>