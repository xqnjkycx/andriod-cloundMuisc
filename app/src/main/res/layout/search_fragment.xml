<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--布局输入框-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E0E0E0"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="left"
                android:src="@drawable/input_search"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="搜索"
                android:maxLines="1"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--布局热搜列表和历史搜索列表-->
    <LinearLayout
        android:id="@+id/hot_and_history_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/hot"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:text="大家都在搜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_700"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <!--热搜列表-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hot_search_detail_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
        <!--历史搜索列表-->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/history_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/history_search"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:text="历史搜索"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/clear_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:text="清空"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_search_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <!--搜索内容布局-->
        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>